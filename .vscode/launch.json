    "version": "0.2.0",
    "configurations": [
        {
            "name": "TDD: Run Unit Test",
            "type": "node",
            "stopOnEntry": false,
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "args": [
                "--debug-brk",
                "${workspaceRoot}/dist/test/**/${fileBasenameNoExtension}.js"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**",
                "!${workspaceRoot}/node_modules/**"
            ],
            "skipFiles": [
                "node_modules/**/*.js",
                "${workspaceRoot}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ]
        }
    ]
}